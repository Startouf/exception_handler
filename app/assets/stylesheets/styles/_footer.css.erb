footer {
  display:  block;
  position: absolute;
  bottom: 0;
  width: 100%;
  font-size: 2em;
  text-align: center;
  vertical-align: middle;
}
footer a       { opacity: 0.45; transition: opacity 0.15s ease-in-out; }
footer a:hover { opacity: 1; text-decoration: none; }
footer a img   { display: inline-block; width: 24px; margin: 0; padding: 1em 0.25em; vertical-align: middle; }

