footer {
  display:  block;
  position: absolute;
  bottom: 0;
  width: 100%;
  font-size: 2em;
  text-align: center;
  vertical-align: middle;
}
footer a {
  display: inline-block;
  margin-right: -4px;
  opacity: 0.45;
  padding: 1.5em 0.3em;
  transition: opacity 0.15s ease-in-out;
}
footer a:hover { opacity: 1; text-decoration: none; }
footer a img   { width: 24px; vertical-align: middle; }

